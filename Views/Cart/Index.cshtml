@model EcommerceWebSite.Models.Cart
@{
    ViewData["Title"] = "Alışveriş Sepeti";
}
<div class="container pb-5">
  <div class="row">
    <div class="col-md-12">

      <h2>Alışveriş Sepeti</h2>
      <hr />

      @if (Model.CartLines != null && Model.CartLines.Count > 0)
      {
        <table class="table table-bordered">
          <thead>
            <tr>
              <th></th>
              <th>Quantity</th>
              <th>Product Name</th>
              <th>Price</th>
              <th>Sub Total</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          @foreach (var item in Model.CartLines)
          {
            <tr>
              <td>
                @if (!string.IsNullOrWhiteSpace(item.Product?.Image))
                {
                  <img src="~/Upload/@item.Product.Image" width="50" alt="@item.Product?.Name" />
                }
              </td>
              <td>@item.Quantity</td>
              <td>@item.Product?.Name</td>
              <td>@item.Product?.Price.ToString("c")</td>
              <td>@((item.Product!.Price * item.Quantity).ToString("c"))</td>
              <td>
                @using (Html.BeginForm("RemoveFromCart", "Cart", FormMethod.Post))
                {
                  @Html.AntiForgeryToken()
                  <input type="hidden" name="id" value="@item.Product.Id" />
                  <button type="submit" class="btn btn-danger btn-sm">
                    <i class="fa fa-trash-o" aria-hidden="true"></i> Delete
                  </button>
                }
              </td>
            </tr>
          }
          </tbody>
          <tfoot>
            <tr>
              <td colspan="5" class="text-end"><strong>Toplam</strong></td>
              <td><strong>@Model.Total().ToString("c")</strong></td>
            </tr>
          </tfoot>
        </table>
        <div class="text-center">
                    <a href="/Home/List" class="btn btn-primary">
                        <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                        Alışverişe Devam Et
                    </a>
                    <a href="/Cart/Checkout" class="btn btn-primary">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Alışverişi Tamamla
                    </a>
        </div>

      }
      else
      {
        <div class="alert alert-warning" role="alert">
          <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
          Alışveriş sepetinizde ürün bulunmamaktadır.
        </div>
      }

    </div>
  </div>
</div>