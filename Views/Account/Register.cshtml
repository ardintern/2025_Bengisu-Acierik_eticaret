@model EcommerceWebSite.Models.Register
@{
    ViewData["Title"] = "Yeni Kullanıcı";
}
<div class="container pb-5">
    <h2>Yeni Kullanıcı</h2>
    <hr />

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.Surname, new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.Username, new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.RePassword, new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.RePassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RePassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <input type="submit" value="Kullanıcı Oluştur" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
